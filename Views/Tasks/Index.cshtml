@model IEnumerable<MyMvcApp.Models.TaskItem>

@{
    ViewData["Title"] = "Task Manager";
    var pendingTasks = Model.Where(t => !t.IsCompleted).ToList();
    var completedTasks = Model.Where(t => t.IsCompleted).ToList();
}

<div class="task-container">
    <div class="task-header d-flex justify-content-between align-items-center">
        <div>
            <h1><i class="bi bi-check2-square"></i> Task Manager</h1>
            <p class="mb-0 mt-2" style="opacity: 0.9;">
                @pendingTasks.Count pending • @completedTasks.Count completed
            </p>
        </div>
        <a asp-action="Create" class="btn btn-light btn-lg">
            <i class="bi bi-plus-circle"></i> Add Task
        </a>
    </div>

    <!-- Search and Filter Bar -->
    <div class="search-filter-bar mb-4">
        <form asp-action="Index" method="get" class="row g-3">
            <div class="col-md-6">
                <div class="search-box">
                    <i class="bi bi-search search-icon"></i>
                    <input type="text" name="searchString" value="@ViewData["CurrentSearch"]" 
                           class="form-control search-input" placeholder="Search tasks..." />
                </div>
            </div>
            <div class="col-md-4">
                <select name="filter" class="form-select" onchange="this.form.submit()">
                    <option value="">All Tasks</option>
                    <option value="pending" selected="@(ViewData["CurrentFilter"]?.ToString() == "pending")">Pending Only</option>
                    <option value="completed" selected="@(ViewData["CurrentFilter"]?.ToString() == "completed")">Completed Only</option>
                    <option value="overdue" selected="@(ViewData["CurrentFilter"]?.ToString() == "overdue")">Overdue Only</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-primary-gradient w-100">
                    <i class="bi bi-funnel"></i> Filter
                </button>
            </div>
        </form>
        @if (!string.IsNullOrEmpty(ViewData["CurrentSearch"]?.ToString()) || !string.IsNullOrEmpty(ViewData["CurrentFilter"]?.ToString()))
        {
            <div class="mt-2">
                <a asp-action="Index" class="btn btn-sm btn-outline-secondary">
                    <i class="bi bi-x-circle"></i> Clear Filters
                </a>
            </div>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <div class="empty-state-icon">
                <i class="bi bi-inbox"></i>
            </div>
            <h3 style="color: #4a5568;">No tasks yet!</h3>
            <p style="color: #718096;">Start by creating your first task to get organized.</p>
            <a asp-action="Create" class="btn btn-primary-gradient mt-3">
                <i class="bi bi-plus-circle"></i> Create Your First Task
            </a>
        </div>
    }
    else
    {
        @if (pendingTasks.Any())
        {
            <div class="mb-4">
                <h4 class="mb-3" style="color: #2d3748;">
                    <i class="bi bi-list-task"></i> Pending Tasks
                </h4>
                <div class="row">
                    @foreach (var item in pendingTasks)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="task-card">
                                <div class="task-card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="task-title">
                                            @item.Title
                                        </h5>
                                        <span class="badge bg-warning text-dark badge-status">Pending</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="task-description">
                                            @item.Description
                                        </p>
                                    }

                                    <div class="task-meta">
                                        <span class="task-meta-item">
                                            <i class="bi bi-calendar-plus"></i>
                                            @item.CreatedAt.ToString("MMM dd")
                                        </span>
                                        @if (item.DueDate.HasValue)
                                        {
                                            <span class="task-meta-item @(item.DueDate < DateTime.Now ? "text-danger" : "")" style="@(item.DueDate < DateTime.Now ? "background: #fee; color: #c53030;" : "")">
                                                <i class="bi bi-alarm"></i>
                                                @item.DueDate.Value.ToString("MMM dd")
                                                @if (item.DueDate < DateTime.Now)
                                                {
                                                    <span class="ms-1">⚠️</span>
                                                }
                                            </span>
                                        }
                                    </div>

                                    <div class="task-actions">
                                        <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-task btn-complete btn-sm">
                                                <i class="bi bi-check-circle"></i> Complete
                                            </button>
                                        </form>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-task btn-edit btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this task?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-task btn-delete btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }

        @if (completedTasks.Any())
        {
            <div class="mb-4">
                <h4 class="mb-3" style="color: #2d3748;">
                    <i class="bi bi-check-circle-fill text-success"></i> Completed Tasks
                </h4>
                <div class="row">
                    @foreach (var item in completedTasks)
                    {
                        <div class="col-md-6 col-lg-4 mb-3">
                            <div class="task-card completed">
                                <div class="task-card-body">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <h5 class="task-title completed">
                                            @item.Title
                                        </h5>
                                        <span class="badge bg-success badge-status">Done</span>
                                    </div>

                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        <p class="task-description" style="color: #a0aec0;">
                                            @item.Description
                                        </p>
                                    }

                                    <div class="task-meta">
                                        <span class="task-meta-item">
                                            <i class="bi bi-calendar-check"></i>
                                            @item.CreatedAt.ToString("MMM dd")
                                        </span>
                                    </div>

                                    <div class="task-actions">
                                        <form asp-action="ToggleComplete" asp-route-id="@item.Id" method="post" class="d-inline">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-task btn-undo btn-sm">
                                                <i class="bi bi-arrow-counterclockwise"></i> Undo
                                            </button>
                                        </form>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-task btn-edit btn-sm">
                                            <i class="bi bi-pencil"></i> Edit
                                        </a>
                                        <form asp-action="Delete" asp-route-id="@item.Id" method="post" class="d-inline" 
                                              onsubmit="return confirm('Are you sure you want to delete this task?');">
                                            @Html.AntiForgeryToken()
                                            <button type="submit" class="btn btn-task btn-delete btn-sm">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    }
</div>
