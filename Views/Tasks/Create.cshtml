@model MyMvcApp.Models.TaskItem

@{
    ViewData["Title"] = "Create Task";
}

<div class="task-container">
    <div class="task-header">
        <h1><i class="bi bi-plus-circle"></i> Create New Task</h1>
        <p class="mb-0 mt-2" style="opacity: 0.9;">Add a new task to stay organized</p>
    </div>

    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="form-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                    
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">
                            <i class="bi bi-pencil-square"></i> Task Title *
                        </label>
                        <input asp-for="Title" class="form-control" placeholder="e.g., Complete project documentation" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="Description" class="form-label">
                            <i class="bi bi-text-paragraph"></i> Description
                        </label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Add more details about this task..."></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-4">
                        <label asp-for="DueDate" class="form-label">
                            <i class="bi bi-calendar-event"></i> Due Date
                        </label>
                        <input asp-for="DueDate" class="form-control" type="date" />
                        <span asp-validation-for="DueDate" class="text-danger"></span>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-primary-gradient">
                            <i class="bi bi-plus-circle"></i> Create Task
                        </button>
                        <a asp-action="Index" class="btn btn-secondary" style="border-radius: 10px; padding: 0.75rem 1.5rem;">
                            <i class="bi bi-arrow-left"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
